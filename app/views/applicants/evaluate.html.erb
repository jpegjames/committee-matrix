	<div class="field general_comments">
		<%= f.label :general_comments %> <br>
		<%= f.text_area :general_comments, :rows => 6, :cols => 80 %>
	</div>
	
	<p>Do you recommend <%= @applicant.name %> to be on the Skype interview list? <%= f.check_box :skype_vote %> Yes</p>
	
	<p><%= f.submit "Save Evaluation" %> <%= link_to "Back", applicants_url %></p>
<% end %>


<script type="text/javascript" charset="utf-8">
	$("input:radio").click(function() {
		var value = $(this).val();
		$(this).parent().removeClass().addClass("selected-value-" + value);
	});
</script>