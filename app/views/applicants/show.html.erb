<h1>Evaluation responses for <%= @applicant %></h1>

<style type="text/css" media="screen">
	tr td:first-child {
		border-bottom: 1px solid #ccc;
	}
</style>


<h2><%= @applicant %> Files (<%= @applicant.files.size %>)</h2>
<ul>
	<% @applicant.files.each do |file| %>
		<li><%= link_to file.attachment_file_name, file.attachment.url(), :target => "_blank" %> (<%= number_to_human_size(file.attachment_file_size) %>)</li>
	<% end %>		
</ul>

<h2>Skype Comments</h2>
<% @responses.each do |response| %>
	<% if response.skype_comments != nil and response.skype_comments != "" %>
		<p><b><%= response.member.name %>:</b> <%= response.skype_comments %></p>
	<% end %>
<% end %>


<h2>Initial Evaluation</h2>

<table border="0" cellspacing="1" cellpadding="0" class="responses">
	<tr>
		<th class="col-questions"></th>
		<% @responses.each do |response| %>
			<th class="col-member"><%= response.member.name %></th>
		<% end %>
		<th class="col-comments">Comments</th>
	</tr>
	<tr>
		<td>
			<strong>Teaching Experience</strong>
		</td>
		<% @responses.each do |response| %>
			<td class="selected-value selected-value-<%= response.q1a %>"><%= response.q1a if response.q1a != 0 %></td>
		<% end %>
		<td>
			<% @responses.each do |response| %>
				<% if response.q1c != "" %>
					<b><%= response.member.name %>:</b> <%= response.q1c %><br>
				<% end %>
			<% end %>
		</td>
	</tr>
	<tr>
		<td>
			<strong><%= @applicant.position && ['painting','3d / sculpture'].include?(@applicant.position.title.downcase) ? 'Administrative Experience & Service Record' : 'Darkroom Experience' %></strong>
